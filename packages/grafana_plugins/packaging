#!/usr/bin/env bash

set -eux

# Unzip Grafana Statusmap Panel
unzip ${BOSH_COMPILE_TARGET}/grafana_plugins/flant-statusmap-panel-0.5.1.zip -d ${BOSH_INSTALL_TARGET}

# Unzip Clock Panel
unzip ${BOSH_COMPILE_TARGET}/grafana_plugins/grafana-clock-panel-2.1.3.zip -d ${BOSH_INSTALL_TARGET}

# Unzip Worldmap Panel
unzip ${BOSH_COMPILE_TARGET}/grafana_plugins/grafana-worldmap-panel-v0.3.2.zip -d ${BOSH_INSTALL_TARGET}

# Unzip Diagram Panel
unzip ${BOSH_COMPILE_TARGET}/grafana_plugins/jdbranham-diagram-panel-1.7.3.zip -d ${BOSH_INSTALL_TARGET}

# Unzip Histogram Panel
unzip ${BOSH_COMPILE_TARGET}/grafana_plugins/mtanda-histogram-panel-v0.1.6.zip -d ${BOSH_INSTALL_TARGET}

# Unzip Grafana Status Panel
unzip ${BOSH_COMPILE_TARGET}/grafana_plugins/vonage-status-panel-v1.0.10.zip -d ${BOSH_INSTALL_TARGET}
